                    }
                }
            }
        },
        "/recycle-hubs/{id}": {
            "get": {
                "description": "Retrieve a specific recycle hub by its ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "recycle-hubs"
                ],
                "summary": "Get a recycle hub by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Recycle Hub ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.RecycleHubResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/response.ErrorResponse"
                        }
                    }
                }
            },
            "put": {
                "description": "Update an existing recycle hub with the provided details",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "recycle-hubs"
                ],
                "summary": "Update an existing recycle hub",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Recycle Hub ID",
                        "name": "id",
