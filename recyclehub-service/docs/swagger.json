                "produces": [
                    "application/json"
                ],
                "tags": [
                    "recycle-hubs"
                ],
                "summary": "Delete a recycle hub by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Recycle Hub ID",
                        "name": "id",
                        "in": "path",
